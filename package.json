{
  "name": "potato-a11y",
  "version": "0.0.1",
  "description": "Accessible component library website",
  "main": "index.js",
  "scripts": {
    "build": "gulp build --prod",
    "cypress:cli": "cypress run -c video=false",
    "cypress:chrome": "npm run cypress:cli -- -b chrome",
    "cypress:firefox": "npm run cypress:cli -- -b firefox",
    "inject": "node --experimental-modules ./scripts/inject-code.mjs",
    "lint": "npm run lint:scss && npm run lint:js",
    "lint:js": "eslint \"src/**/*.js\"",
    "lint:scss": "stylelint \"src/**/*.scss\"",
    "start": "gulp",
    "serve-dist": "npx http-server dist --port 3030",
    "test": "start-server-and-test 'gulp serve-build' 3030 'cypress open'",
    "test:ci": "start-server-and-test serve-dist 3030",
    "test:ci:chrome": "npm run test:ci -- cypress:chrome",
    "test:ci:firefox": "npm run test:ci -- cypress:firefox",
    "pipeline": "npm run lint && npm run build && npm run test:ci:chrome && npm run test:ci:firefox",
    "publish": "cd src/ace && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:potato/own-things/potato-material.git"
  },
  "author": "Ahmed Abuelgasim",
  "license": "ISC",
  "private": true,
  "devDependencies": {
    "@types/node": "^14.0.4",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "browser-sync": "^2.26.7",
    "cypress": "^4.6.0",
    "eslint": "^6.8.0",
    "eslint-plugin-cypress": "^2.10.3",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-if": "^3.0.0",
    "gulp-pug": "^4.0.1",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-terser": "^1.2.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "markdown-it": "^10.0.0",
    "pug": "^2.0.4",
    "start-server-and-test": "^1.11.0",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.17.2",
    "typescript": "^3.9.3"
  },
  "browserslist": [
    "last 2 versions",
    "not IE > 9"
  ],
  "eslintIgnore": [
    "**/*.min.js"
  ],
  "customProperties": {
    "componentLibrary": "ace"
  }
}
