{
  "name": "potato-a11y",
  "version": "0.0.1",
  "description": "Accessible component library website",
  "main": "index.js",
  "scripts": {
    "build": "gulp build",
    "inject": "node --experimental-modules ./scripts/inject-code.mjs",
    "lint": "npm run lint:scss && npm run lint:js",
    "lint:js": "eslint \"src/js/**/*.js\"",
    "lint:scss": "stylelint \"src/sass/**/*.scss\"",
    "start": "gulp",
    "start:test": "npx http-server ./dist --port 3030 -c-1",
    "test": "gulp serve-build & cypress open",
    "test:cli": "cypress run --config video=false",
    "pipeline": "npm run build && npm run lint && npm run test:cli -- --browser chrome && npm run test:cli -- --browser firefox && npm run test:cli",
    "publish": "cd src/ace && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:potato/own-things/potato-material.git"
  },
  "author": "Ahmed Abuelgasim",
  "license": "ISC",
  "private": true,
  "devDependencies": {
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "browser-sync": "^2.26.7",
    "cypress": "^4.5.0",
    "eslint": "^6.8.0",
    "eslint-plugin-cypress": "^2.10.3",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-pug": "^4.0.1",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-terser": "^1.2.0",
    "markdown-it": "^10.0.0",
    "pug": "^2.0.4",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.17.1"
  },
  "browserslist": [
    "last 2 versions",
    "not IE > 9"
  ],
  "eslintIgnore": [
    "**/*.min.js"
  ],
  "customProperties": {
    "componentLibrary": "ace"
  }
}
