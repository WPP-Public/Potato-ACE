mixin component(key, component)
  li(class="component-list__component")
    a(href=`/${key}` class="component-list__component-link")
      h2=component.name
      if component.aliases
        p
          strong=`Alias${component.aliases.length > 1 ? 'es' : ''}: `
          =`${component.aliases.join(', ')}.`

      img(alt=`${component.name} in action` class="component-list__component-img" src=`/img/components/${key}.gif`)
