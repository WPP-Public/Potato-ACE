{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:cypress/recommended"
  ],
  "plugins": [
    "cypress"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "template.test.js"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 3
      }
    ],
    "no-unused-vars": [
      "warn"
    ]
  },
  "overrides": [
    {
      "files": ["src/ace/components/**/*-page.js"],
      "rules": {
        "no-unused-vars": [
          "off"
        ]
      }
    }
  ]
}
