{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "include"
        ]
      }
    ],
    "max-empty-lines": 2,
    "order/properties-alphabetical-order": true
  }
}
