{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "no-empty-source": [true, {
      "severity": "warning"
    }],
    "max-empty-lines": 2,
    "order/properties-alphabetical-order": true
  }
}
